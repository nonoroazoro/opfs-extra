{
    "name": "opfs-extra",
    "version": "1.0.2",
    "packageManager": "pnpm@10.28.2",
    "description": "opfs-extra brings the user-friendly API to OPFS, just like fs-extra.",
    "license": "MIT",
    "main": "./dist/lib/index.js",
    "module": "./dist/es/index.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/es/index.js",
            "require": "./dist/lib/index.js"
        }
    },
    "author": {
        "email": "xiaochao.k@gmail.com",
        "name": "nonoroazoro",
        "url": "https://github.com/nonoroazoro"
    },
    "homepage": "https://github.com/nonoroazoro/opfs-extra",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonoroazoro/opfs-extra.git"
    },
    "bugs": {
        "email": "xiaochao.k@gmail.com",
        "url": "https://github.com/nonoroazoro/opfs-extra/issues"
    },
    "keywords": [
        "opfs",
        "fs",
        "file",
        "file system",
        "json",
        "read",
        "write"
    ],
    "scripts": {
        "prepare": "husky",
        "prebuild": "npm run lint && npm run test && rimraf dist coverage",
        "build": "npm run build:es && npm run build:lib && npm run build:types",
        "build:es": "tsc --project ./tsconfig.es.json",
        "build:lib": "tsc --project ./tsconfig.lib.json",
        "build:types": "tsc --project ./tsconfig.types.json",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:cov": "vitest run --coverage",
        "lint": "eslint src/**",
        "upgradepackages": "ncu -u"
    },
    "lint-staged": {
        "{src,tests}/**/*.ts": [
            "dprint fmt",
            "eslint"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitest/browser-playwright": "^4.0.18",
        "@vitest/coverage-v8": "^4.0.18",
        "dprint": "^0.51.1",
        "eslint": "^9.39.2",
        "eslint-config-zoro": "^9.0.7",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "npm-check-updates": "^19.3.2",
        "rimraf": "^6.1.2",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "files": [
        "dist"
    ]
}
